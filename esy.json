{
  "name": "bs-platform",
  "version": "8.3.0-dev.2",
  "dependencies": {
    "ocaml": "4.6.1000+BS"
  },
  "devDependencies": {
    "ocaml": "4.6.1000+BS"
  },
  "resolutions": {
    "ocaml": "Et7f3/ocaml:package.json#cee7129b58afcb987cc1741acf4a786414502a57"
  },
  "scripts": {
    "doc": "echo here we can generate doc for rescript-lang and push",
    "test": "echo here we can actually test the binary work maybe with bsc -e 'code'",
    "clean": "node ./scripts/ninja.js clean"
  },
  "esy": {
    "build": [
      "cp -p -r #{ os != 'darwin' ? '-u' : ''} -f #{self.root / 'lib'} #{self.root / 'jscomp'} #{self.root / 'scripts'} #{self.root / 'vendor'} #{self.root / (os == 'darwin' ? 'darwin' : os == 'windows' ? 'win32' : 'linux')} #{self.target_dir}",
      "sh -c \"cd #{self.target_dir} && node ./scripts/install.js\"",
      "cp -p -r #{ os != 'darwin' ? '-u' : ''} -f #{self.target_dir / 'lib' / 'bstracing'} #{self.root / 'bsrefmt'} #{self.root / 'bsb'} #{self.root / 'bsc'} #{self.target_dir / (os == 'darwin' ? 'darwin' : os == 'windows' ? 'win32' : 'linux')}/. #{self.bin}",
      "cp -p -r #{ os != 'darwin' ? '-u' : ''} -f #{self.root / 'bsconfig.json'} #{self.root / 'bsrefmt'} #{self.root / 'esy.json'} #{self.root / 'package.json'} #{self.target_dir / 'jscomp'} #{self.target_dir / 'jscomp' / 'bin'} #{self.target_dir / 'lib'} #{self.target_dir / 'scripts'} #{self.target_dir / 'vendor'} #{self.install}"
    ],
    "buildDev": [
      "cp -p -r #{ os != 'darwin' ? '-u' : ''} -f #{self.root / 'package.json'} #{self.root / 'bsconfig.json'} #{self.root / 'odoc_gen'} #{self.root / 'syntax'} #{self.root / 'lib'} #{self.root / 'jscomp'} #{self.root / 'scripts'} #{self.root / 'vendor'} #{self.root / (os == 'darwin' ? 'darwin' : os == 'windows' ? 'win32' : 'linux')} #{self.target_dir}",
      "echo config",
      "sh -c \"cd #{self.target_dir} && node ./scripts/ninja.js config\"",
      "echo build",
      "sh -c \"cd #{self.target_dir} && node ./scripts/ninja.js build\"",
      "cp -p -r #{ os != 'darwin' ? '-u' : ''} -f #{self.target_dir / 'lib' / 'bstracing'} #{self.root / 'bsrefmt'} #{self.root / 'bsb'} #{self.root / 'bsc'} #{self.target_dir / (os == 'darwin' ? 'darwin' : os == 'windows' ? 'win32' : 'linux')}/. #{self.bin}",
      "cp -p -r #{ os != 'darwin' ? '-u' : ''} -f #{self.root / 'bsconfig.json'} #{self.root / 'bsrefmt'} #{self.root / 'esy.json'} #{self.root / 'package.json'} #{self.target_dir / 'jscomp'} #{self.target_dir / 'jscomp' / 'bin'} #{self.target_dir / 'lib'} #{self.target_dir / 'scripts'} #{self.target_dir / 'vendor'} #{self.install}"

    ],
    "buildEnv": {
      "ESY": "true"
    },
    "exportedEnv": {
      "CAML_LD_LIBRARY_PATH": {
        "val": "#{self.lib / 'ocaml'  / 'stublibs' : self.lib / 'ocaml'  : $CAML_LD_LIBRARY_PATH}",
        "scope": "global"
      },
      "OCAML_TOPLEVEL_PATH": {
        "val": "#{self.lib / 'ocaml' }",
        "scope": "global"
      },
      "bs_custom_resolution": {
        "val": "true",
        "scope": "global"
      },
      "bs_platform__install": {
        "val": "#{self.install}",
        "scope": "global"
      },
      "PATH": {
        "val": "#{self.lib : $PATH}",
        "scope": "global"
      }
    }
  },
  "description": "ReScript compiler for use in esy, ocaml standard libary by ReScript and its required runtime support",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rescript-lang/rescript-compiler.git"
  },
  "keywords": ["ocaml", "rescript", "stdlib", "functional programming"],
  "author": {
    "name": "Hongbo Zhang"
  },
  "maintainers": [
    {
      "name": "hongbo_zhang",
      "email": "bobzhang1988@gmail.com"
    }
  ],
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/rescript-lang/rescript-compiler/issues"
  },
  "homepage": "https://github.com/rescript-lang/rescript-compiler#readme"
}
